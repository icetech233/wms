@namespace WmsApp.Pages.StockIn
@page "/stockin/requestform"
@using WmsApp.Models
@using System.Text.Json

@inject NotificationService _notice

<GridContent Id="#main">
    <span>申请入库</span>

    <Form TModel=@StockAddModel Model=@stockModel>
        <Row Align="top" Gutter=24>
            <Col Span=6>
                <FormItem Label="入库单号">
                    <Input @bind-Value="@context.StockInNumber" />
                </FormItem>
            </Col>
            <Col Span=6>
                <FormItem Label="类型">
                    <Input @bind-Value="@context.StockInNumber" />
                </FormItem>
            </Col>
            <Col Span=6>
                <FormItem Label="仓库">
                    <Input @bind-Value="@context.StockInWarehouse" />
                </FormItem>
            </Col>
            <Col Span=6>
                <FormItem Label="供应商">
                    <Input @bind-Value="@context.StockInWarehouse" />
                </FormItem>
            </Col>
            <Col Span=6>
                <FormItem Label="合同号">
                    <Input @bind-Value="@context.StockInWarehouse" />
                </FormItem>
            </Col>

        </Row>
    </Form>

    <Divider />

    <Form TModel=@StockAddModel Model=@stockModel>
        <FormItem Label="入库单号:">
            <Input @bind-Value="@context.StockInNumber" />
        </FormItem>
        <FormItem Label="类型:">
            <Input @bind-Value="@context.StockInType" />
        </FormItem>
        <FormItem Label="仓库:">
            <Input @bind-Value="@context.StockInWarehouse" />
        </FormItem>
        <FormItem Label="供应商:">
            <Input @bind-Value="@context.StockInWarehouse" />
        </FormItem>
        <FormItem Label="合同号:">
            <Input @bind-Value="@context.StockInWarehouse" />
        </FormItem>
    </Form>

</GridContent>

@code {

    public class StockAddModel
    {
        /// <summary>
        /// 入库单号
        /// </summary>
        [Required]
        public string StockInNumber { get; set; }
        /// <summary>
        /// 入库类型
        /// </summary>
        [Required, Description("入库类型")]
        public string StockInType { get; set; }
        [Required, Description("入库仓库")]
        public string StockInWarehouse { get; set; }

        [Required]
        public bool RememberMe { get; set; } = true;
    }

    StockAddModel stockModel = new StockAddModel();

}
